<h1>Show view</h1>
content_for

<h2>Name: <%=@restaurant.name%></h2>
<p>Category: <%=@restaurant.category%></p>
<p>Address: <%=@restaurant.address%></p>
<p>Tel: <%=@restaurant.phone_number%></p>
<p><% @restaurant.reviews.each do |review|%></p>
  <%= review.content %>
  <%= review.rating %>
  <% end %>
  <p></p>
<%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
<%= link_to "Write a review", new_restaurant_review_path(@restaurant),class: "btn btn-primary" %>
